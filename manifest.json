{
  "manifest_version": 3,
  "name": "AI Audio Transcriber",
  "version": "1.0.0",
  "description": "AI-powered real-time audio transcription from browser tabs and microphone using Google Gemini API",
  "permissions": [
    "activeTab",
    "tabs",
    "tabCapture",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*",
    "https://api.deepgram.com/*",
    "https://api.fireworks.ai/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "AI Transcriber"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}